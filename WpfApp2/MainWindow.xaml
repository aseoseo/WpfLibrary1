<Window x:Class="MobileApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification App" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Кнопки для отправки уведомлений -->
            <Button Content="Отправить сообщение" Width="200" Margin="10" Click="SendMessage_Click"/>
            <Button Content="Совершить звонок" Width="200" Margin="10" Click="MakeCall_Click"/>
            <Button Content="Отправить Email" Width="200" Margin="10" Click="SendEmail_Click"/>

            <!-- Текстовый блок для отображения результатов -->
            <TextBlock x:Name="ResultTextBlock" Margin="20" TextAlignment="Center" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
